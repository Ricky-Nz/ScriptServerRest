{
  "name": "Script",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "date": {
      "type": "date"
    },
    "title": {
      "type": "string",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "folder": {
      "type": "belongsTo",
      "model": "Folder",
      "foreignKey": "folderId"
    },
    "actions": {
      "type": "hasMany",
      "model": "Action",
      "foreignKey": "scriptId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
